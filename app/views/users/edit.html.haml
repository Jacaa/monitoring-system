#wrapper
  = render 'layouts/navbar'
  #main-page.edit-page
    = render 'layouts/flash'
    .row
      %p.header.text-center= current_user.email
      .row-content.text-center
        = simple_form_for(@user) do |form|
          = form.input :send_notification
          - if current_user.admin?
            = form.input :save_photo
          .text-center
          = form.button :submit, 'Save', class: 'btn grey-btn'
          = link_to "Delete profile", @user, method: :delete, 
            data: { confirm: "You sure?"}, class: "btn red-border-btn"